# Copy this file to .env and fill in the values below
# WordPress database settings
DB_NAME=local
DB_USER=root
DB_PASSWORD=root
DB_HOST=db

# Site URLs (must be HTTPS in production)
WP_HOME=https://traininghub.railway.app
WP_SITEURL=https://traininghub.railway.app

# Debugging flags (set all to false in production)
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false

# Cron behavior (false to allow wp-cron.php to run, true if using real cron)
DISABLE_WP_CRON=false

# Optional: adjust if you need a non-local environment label
WP_ENVIRONMENT_TYPE=production
